<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="theme-color" content="#000000">
    <link rel="shortcut icon" href="static/icon.ico">
    <link rel="stylesheet" href="static/lib/css/bootstrap.min.css">
    <!-- <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"> -->

    <title>Create Conversation</title>
</head>

<body>
    <div class="container" style="margin-top: 30px">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">Upload Conversation</h3>
                    </div>
                    <div class="panel-body">
                        <!-- <form role="form"> -->
                        <div class="form-group">
                            <label for="books">Chọn sách</label>
                            <select name="books" id="books" class="form-control">
                                <!-- <option value="1">Động vật</option> -->
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="lessions">Chọn bài học</label>
                            <select name="lessions" id="lessions" class="form-control">
                                <!-- <option value="1">Động vật</option> -->
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="name">Tên</label>
                            <input name="name" type="text" class="form-control" id="name-conversation" placeholder="Tên đoạn hội thoại">
                        </div>
                        <div class="form-group">
                            <div class="col-xs-5 col-sm-5 col-md-5 col-lg-5">
                                <label for="avatar">Link Avatar</label>
                                <input name="avatar" type="text" class="form-control" id="avatar" placeholder="Link S3 Avatar">
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                                <label for="sentence">Câu hội thoại</label>
                                <textarea name="sentence" class="form-control" rows="3" id="sentence"></textarea>
                            </div>
                            <button type="button" class="btn btn-success" id="add-conversation">Add</button>
                        </div>
                        <div class="form-group">
                            <label>Nội dung toàn bộ đoạn hội thoại</label>
                            <div id="all-conversation" style="border: 3px solid rebeccapurple; padding: 10px">
                            </div>
                        </div>
                        <button type="button" class="btn btn-primary" id="submit-data">Submit</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="static/lib/js/jquery-3.3.1.min.js"></script>
    <script src="static/lib/js/bootstrap.min.js"></script>
    <script src="static/lib/js/axios.min.js"></script>
    <script src="static/js/create_conversation.js"></script>
</body>

</html>